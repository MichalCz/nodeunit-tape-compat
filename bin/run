#!/usr/bin/env node

const { DataStream } = require('scramjet');
const gs = require('glob-stream');
const tapeRunner = require('../');

DataStream.from(gs(process.argv.slice(2)))
    .use(tapeRunner, {timeout: 10000})
    .run()
    .then(() => {
        console.error("✔ Tests succeeded.");
    })
    .catch(() => {
        console.error("✘ Some tests failed.");
        process.exit(1);
    });
