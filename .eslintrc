{
    "plugins": ["node"],
    "extends": ["eslint:recommended", "plugin:node/recommended"],
    "rules": {
        "node/exports-style": ["error", "module.exports"],
        "semi": [2, "always"],
        "no-extra-semi": 2,
        "no-console": 0,
        "no-process-exit": 0,
        "node/shebang": 0,
        "semi-spacing": [2, { "before": false, "after": true }]
    },
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "env": {
        "node": true
    },
    "root": true
}
